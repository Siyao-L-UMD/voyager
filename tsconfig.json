{
  "compilerOptions": {
    "outDir": "./build/",
    "target": "es6",
    "module": "commonjs",
    "jsx": "react",
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "declaration": true,
    "noErrorTruncation": true,
    "sourceMap": true,
    "keyofStringsOnly": true
  },
  "include": [
    "./node_modules/compassql/typings/*.d.ts",
    "./node_modules/vega-lite/typings/*.d.ts",
    "./node_modules/@types/**/*.d.ts",
    "./typings/*.d.ts",
    "./src/**/*"
  ],
  "exclude": [
    "./node_modules/compassql/typings/json.d.ts",
    "./node_modules/vega-lite/typings/json.d.ts",
    "./node_modules/vega-lite/typings/vega.d.ts",
    "./node_modules/typescript/lib/lib.es2015.iterable.d.ts"
  ]
}
